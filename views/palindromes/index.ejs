<!DOCTYPE html>
<html>
  <head>
    <title>Palindrome List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/palindromes/create">Create Palindrome</a></h3>
      <h1>Palindrome List</h1>
      <% if(palindromes.length<10) { %>
      <table>
        <thead>
          <tr>
            <th>Palindrome</th>
          </tr>
        </thead>
        <tbody>

          <% for(var i=0; i<palindromes.length;i++) { %>
            <tr>
              <td><%= palindromes[i].palindrome%></td>
              <td><%= palindromes.length%></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <% } else if(10<palindromes.length) { %>
        <table>
          <thead>
            <tr>
              <th>Palindrome</th>
            </tr>
          </thead>
          <tbody>

            <% for(var i=palindromes.length - 10; i<palindromes.length;i++) { %>
              <tr>
                <td><%= palindromes[i].palindrome%></td>
                <td><%= palindromes[i].updated_at%></td>
              </tr>
            <% } %>
          </tbody>
        </table>
        <% } else { %>
        <div>No palindromes found.</div>
      <% } %>
    </div>
  </body>
</html>
